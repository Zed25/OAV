        import java.math.BigInteger;
        import java.sql.*;
        import java.util.ArrayList;
        import java.util.Stack;
        //import javax.mail.internet.*;

        //import ClassDiagram.FormRegistrazione;

public class DB {

    private DB(){

    }

    private final String DB_NAME = "jdbc:postgresql://localhost:5432/OAV";
    private final String DB_USER = "postgres";
    private final String DB_PSW = "root";
    private static DB instance=null;

    public boolean serialize(Account acc) {
        Connection con;
        try {
            Class.forName("org.postgresql.Driver");
            con = (Connection) DriverManager.getConnection(DB_NAME, DB_PSW, DB_USER);
        } catch (ClassNotFoundException e){
            e.printStackTrace();
            return false;
        } catch (SQLException e) {
            e.printStackTrace();
            return false;
        }